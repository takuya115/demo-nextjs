{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"include": ["./src/**/*.ts", "./src/**/*.tsx"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"include": ["./src/**/*.ts", "./src/**/*.tsx"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"include": ["./src/**/*.ts", "./src/**/*.tsx"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
